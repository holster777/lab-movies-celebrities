<div class="form-container">

    <h2> Edit a Movie </h2>

    <form action="/movies/{{movie._id}}/edit" method="post">
        <label for="title">Title</label>
        <input type="text" name="title" value="{{movie.title}}">

        <label for="genre">Genre</label>
        <input type="text" name="genre" value="{{movie.genre}}">

        <label for="plot">Plot</label>
        <input type="text" name="plot" value="{{movie.plot}}">

        <label for="cast">Cast</label>
        <select name="cast" multiple>
            {{#each movie.cast}}
            <option name="cast" value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>

        <button type="submit">Update Movie</button>
    </form>


</div>